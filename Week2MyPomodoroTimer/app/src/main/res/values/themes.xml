<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyPomodoroTimer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/work_background</item>
        <item name="colorPrimaryVariant">@color/work_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/play_button</item>
        <item name="colorSecondaryVariant">@color/play_button</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>